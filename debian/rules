#!/usr/bin/make -f
APPNAME := more-shell-utils
SCRIPTS := ff fixperms canonical-name uncolor
GREP_ALIASES := gper grpe gerp
builddir:
	mkdir -p builddir

builddir/Makefile: builddir
	cp -r Makefile builddir

build: build-stamp

build-stamp: builddir/Makefile
	dh_testdir
	# Add here commands to compile the package.
	cd builddir && $(MAKE)
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	# Add here commands to clean up after the build process.
	rm -rf builddir
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	
	mkdir -p $(CURDIR)/debian/$(APPNAME)/usr/bin

	for x in $(SCRIPTS); do \
		cp $(CURDIR)/bin/$$x $(CURDIR)/debian/$(APPNAME)/usr/bin; \
		chmod 0755 $(CURDIR)/debian/$(APPNAME)/usr/bin/$x; \
	done

# install aliases to grep
	cd $(CURDIR)/debian/$(APPNAME)/bin; \
	for x in $(GREP_ALIASES); do \
		ln -s grep $$x; \
	done

# Add here commands to install the package into debian/your_appname
	cd builddir && $(MAKE) INSTALL_ROOT=$(CURDIR)/debian/$(APPNAME) install

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installman
	dh_link
#	dh_strip --dbg-package=ororok-dbg
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure

